/* A4 tri-fold pamphlet (landscape A4, 3 equal panels) */
@page { size: A4 landscape; margin: 0; }
html,body{height:100%;}
body{
  font-family: Inter, system-ui, -apple-system, 'Segoe UI', Roboto, 'Helvetica Neue', Arial;
  -webkit-font-smoothing:antialiased;
  -moz-osx-font-smoothing:grayscale;
  padding: 0.5cm;
  background: #fff;
}
.a4{
  width: 297mm; /* A4 landscape width */
  height: 210mm; /* A4 landscape height */
  margin: 0 auto;
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  gap: 8mm; /* space between panels for visual separation, won't affect fold */
  box-sizing: border-box;
}
.panel{
  padding: 12mm;
  box-sizing: border-box;
  border: 1px solid transparent;
}
.panel-front{background: linear-gradient(180deg,#ffffff,#f8fafc);} 
.brand h1{font-size:36px;margin:0;color:#0f172a}
.brand .tag{color:#475569;margin-top:6px}
.hero img{width:100%;height:auto;border-radius:6px;margin-top:12px}
.cta{margin-top:12px;background:#0ea5a6;color:white;padding:10px;border-radius:6px;display:inline-block}
.panel-inside-left h2,.panel-inside-mid h2,.panel-inside-right h2{margin-top:0;color:#0f172a}
.services-grid{display:grid;grid-template-columns:repeat(2,1fr);gap:10px;margin-top:8px}
.service{display:flex;align-items:center;gap:10px}
.service .icon{width:56px;height:56px;border-radius:8px}
.before-after{display:flex;flex-direction:column;gap:8px}
.img-wrap img{width:100%;height:auto;border-radius:6px;border:1px solid #e6e6e6}
blockquote{background:#f8fafc;padding:10px;border-left:4px solid #0ea5a6;margin:10px 0}
.contact-card{background:#f1f5f9;padding:10px;border-radius:8px}
.print-note{position:fixed;left:12mm;right:12mm;bottom:6mm;text-align:center;color:#94a3b8;font-size:12px}

/* Print adjustments */
@media print{
  body{padding:0}
  .a4{gap:0;border:none}
  .panel{border: none;padding:10mm}
  .print-note{display:none}
}
